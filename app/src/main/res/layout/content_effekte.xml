<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_effekte"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="de.pr22.proberaum.EffekteActivity"
    tools:showIn="@layout/app_bar_effekte">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView" >

        <android.support.constraint.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Random"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewRandom"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonRandomAn"
                android:text="An"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/buttonRandomAus"
                android:layout_marginEnd="8dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonRandomAus"
                android:text="aus"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:text="Blaues Licht"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewBlauesLicht"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="44dp"
                app:layout_constraintTop_toBottomOf="@+id/textViewRandom" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonBlauesLichtAn"
                android:text="An"
                app:layout_constraintTop_toBottomOf="@+id/buttonRandomAn"
                android:layout_marginTop="8dp"
                app:layout_constraintRight_toLeftOf="@+id/buttonBlauesLichtAus"
                android:layout_marginEnd="8dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonBlauesLichtAus"
                android:text="aus"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/buttonRandomAus" />

            <TextView
                android:text="Lichtorgel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewLichtorgel"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="36dp"
                app:layout_constraintTop_toBottomOf="@+id/textViewBlauesLicht" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonLichtorgelAn"
                android:text="An"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/buttonBlauesLichtAn"
                app:layout_constraintRight_toLeftOf="@+id/buttonLichtorgelAus"
                android:layout_marginEnd="8dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonLichtorgelAus"
                android:text="aus"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/buttonBlauesLichtAus" />

            <TextView
                android:text="T-REX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewTrex"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="42dp"
                app:layout_constraintTop_toBottomOf="@+id/textViewLichtorgel" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonTrexAn"
                android:text="An"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/buttonLichtorgelAn"
                app:layout_constraintRight_toLeftOf="@+id/buttonTrexAus"
                android:layout_marginEnd="8dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonTrexAus"
                android:text="aus"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/buttonLichtorgelAus" />

            <TextView
                android:text="Mushroom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewMushroom"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@+id/textViewTrex" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonMushroomAn"
                android:text="An"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/buttonTrexAn"
                app:layout_constraintRight_toLeftOf="@+id/buttonMushroomAus"
                android:layout_marginEnd="8dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonMushroomAus"
                android:text="aus"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/buttonTrexAus" />

            <TextView
                android:text="Spiegelkugel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewSpiegelkugel"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="36dp"
                app:layout_constraintTop_toBottomOf="@+id/textViewMushroom" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonSpiegelkugelAn"
                android:text="An"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/buttonMushroomAn"
                app:layout_constraintRight_toLeftOf="@+id/buttonSpiegelkugelAus"
                android:layout_marginEnd="8dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonSpiegelkugelAus"
                android:text="aus"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/buttonMushroomAus" />

            <TextView
                android:text="Made in Taiwan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewMadeintaiwan"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/textViewSpiegelkugel" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonMadeintaiwanAn"
                android:text="An"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/buttonSpiegelkugelAn"
                app:layout_constraintRight_toLeftOf="@+id/buttonMadeintaiwanAus"
                android:layout_marginEnd="8dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonMadeintaiwanAus"
                android:text="aus"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/buttonSpiegelkugelAus" />

            <TextView
                android:text="Stroboskop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewStroboskop"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@+id/textViewMadeintaiwan" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonStroboskopAn"
                android:text="An"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/buttonMadeintaiwanAn"
                app:layout_constraintRight_toLeftOf="@+id/buttonStroboskopAus"
                android:layout_marginEnd="8dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonStroboskopAus"
                android:text="aus"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/buttonMadeintaiwanAus" />

            <TextView
                android:text="Nebelmaschine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewNebelmaschine"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="36dp"
                app:layout_constraintTop_toBottomOf="@+id/textViewStroboskop" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonNebelmaschineAn"
                android:text="An"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/buttonStroboskopAn"
                app:layout_constraintRight_toLeftOf="@+id/buttonNebelmaschineAus"
                android:layout_marginEnd="8dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonNebelmaschineAus"
                android:text="aus"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/buttonStroboskopAus" />

            <TextView
                android:text="Nebel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewNebel"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="38dp"
                app:layout_constraintTop_toBottomOf="@+id/textViewNebelmaschine" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonNebelAn"
                android:text="An"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/buttonNebelmaschineAn"
                app:layout_constraintRight_toLeftOf="@+id/buttonNebelAus"
                android:layout_marginEnd="8dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonNebelAus"
                android:text="aus"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/buttonNebelmaschineAus" />

            <TextView
                android:text=" "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewPlatzhalter"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="36dp"
                app:layout_constraintTop_toBottomOf="@+id/textViewNebel" />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</RelativeLayout>
