<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_licht"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="de.pr22.proberaum.LichtActivity"
    tools:showIn="@layout/app_bar_licht">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView" >

        <android.support.constraint.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Ecke Gelb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewEckeGelb"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="37dp"
                app:layout_constraintTop_toBottomOf="@+id/textViewRoehreSofa" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonEckeGelbAn"
                android:text="An"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/buttonRoehreSofaAn"
                app:layout_constraintRight_toLeftOf="@+id/buttonEckeGelbAus"
                android:layout_marginEnd="8dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonEckeGelbAus"
                android:text="aus"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/buttonRoehreSofaAus"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:text="Ecke Rot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewEckeRot"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="37dp"
                app:layout_constraintTop_toBottomOf="@+id/textViewEckeGelb" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonEckeRotAn"
                android:text="An"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/buttonEckeGelbAn"
                app:layout_constraintRight_toLeftOf="@+id/buttonEckeRotAus"
                android:layout_marginEnd="8dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonEckeRotAus"
                android:text="aus"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/buttonEckeGelbAus"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:text="Ecke Blau"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewEckeBlau"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="37dp"
                app:layout_constraintTop_toBottomOf="@+id/textViewEckeRot" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonEckeBlauAn"
                android:text="An"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/buttonEckeRotAn"
                app:layout_constraintRight_toLeftOf="@+id/buttonEckeBlauAus"
                android:layout_marginEnd="8dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonEckeBlauAus"
                android:text="aus"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/buttonEckeRotAus" />

            <TextView
                android:text="Hauptlampe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewHaupt"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="28dp"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonHauptAn"
                android:text="An"
                app:layout_constraintRight_toLeftOf="@+id/buttonHauptAus"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonHauptAus"
                android:text="aus"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:text="Röhre (Leinwand)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewRoehreLeinwannd"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="37dp"
                app:layout_constraintTop_toBottomOf="@+id/textViewHaupt" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonRoehreLeinwandAn"
                android:text="An"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/buttonHauptAn"
                app:layout_constraintRight_toLeftOf="@+id/buttonRoehreLeinwandAus"
                android:layout_marginEnd="8dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonRoehreLeinwandAus"
                android:text="aus"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/buttonHauptAus" />

            <TextView
                android:text="Röhre (Sofa)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewRoehreSofa"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="37dp"
                app:layout_constraintTop_toBottomOf="@+id/textViewRoehreLeinwannd" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonRoehreSofaAn"
                android:text="An"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/buttonRoehreLeinwandAn"
                app:layout_constraintRight_toLeftOf="@+id/buttonRoehreSofaAus"
                android:layout_marginEnd="8dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonRoehreSofaAus"
                android:text="aus"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/buttonRoehreLeinwandAus"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:text="Schwarzlicht"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewSchwarzlicht"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="37dp"
                app:layout_constraintTop_toBottomOf="@+id/textViewEckeBlau" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonSchwarzlichtAn"
                android:text="An"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/buttonEckeBlauAn"
                app:layout_constraintRight_toLeftOf="@+id/buttonSchwarzlichtAus"
                android:layout_marginEnd="8dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonSchwarzlichtAus"
                android:text="aus"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/buttonEckeBlauAus"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:text="Anti-Fliegen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewAntiFliegen"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="37dp"
                app:layout_constraintTop_toBottomOf="@+id/textViewSchwarzlicht" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonAntiFliegenAn"
                android:text="An"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/buttonSchwarzlichtAn"
                app:layout_constraintRight_toLeftOf="@+id/buttonAntiFliegenAus"
                android:layout_marginEnd="8dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonAntiFliegenAus"
                android:text="aus"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/buttonSchwarzlichtAus"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:text="Getränkeautomat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewGetraenkeautomat"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="37dp"
                app:layout_constraintTop_toBottomOf="@+id/textViewAntiFliegen" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonGetraenkeautomatAn"
                android:text="An"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/buttonAntiFliegenAn"
                app:layout_constraintRight_toLeftOf="@+id/buttonGetraenkeautomatAus"
                android:layout_marginEnd="8dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonGetraenkeautomatAus"
                android:text="aus"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/buttonAntiFliegenAus"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
            android:text="Licht Außen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewLichtAussen"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="37dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewGetraenkeautomat" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonLichtAussenAn"
                android:text="An"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/buttonGetraenkeautomatAn"
                app:layout_constraintRight_toLeftOf="@+id/buttonLichtAussenAus"
                android:layout_marginEnd="8dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonLichtAussenAus"
                android:text="aus"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/buttonGetraenkeautomatAus"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:text="Licht Grill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewLichtGrill"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="37dp"
                app:layout_constraintTop_toBottomOf="@+id/textViewLichtAussen" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonLichtGrillAn"
                android:text="An"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/buttonLichtAussenAn"
                app:layout_constraintRight_toLeftOf="@+id/buttonLichtGrillAus"
                android:layout_marginEnd="8dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonLichtGrillAus"
                android:text="aus"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/buttonLichtAussenAus"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:text=" "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewPlatzhalter"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="36dp"
                app:layout_constraintTop_toBottomOf="@+id/textViewLichtGrill" />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</RelativeLayout>
